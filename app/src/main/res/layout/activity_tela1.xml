<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Tela 1"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoNomeTela1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Nome:"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textoEmailTela1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email:"
        app:layout_constraintEnd_toEndOf="@+id/textoNomeTela1"
        app:layout_constraintStart_toStartOf="@+id/textoNomeTela1"
        app:layout_constraintTop_toBottomOf="@+id/textoNomeTela1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="aceitou"
        android:text="Aceitar Dados"
        app:layout_constraintStart_toStartOf="@+id/textoEmailTela1"
        app:layout_constraintTop_toBottomOf="@+id/textoEmailTela1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="rejeitou"
        android:text="Recusar Dados"
        app:layout_constraintEnd_toEndOf="@+id/textoEmailTela1"
        app:layout_constraintTop_toBottomOf="@+id/textoEmailTela1" />
</androidx.constraintlayout.widget.ConstraintLayout>